  author = {Xu, Xiangtao and Medvigy, David and Joseph Wright, Stuart and Kitajima, Kaoru and Wu, Jin and Albert, Loren P. and Martins, Giordane A. and Saleska, Scott R. and Pacala, Stephen W.},
